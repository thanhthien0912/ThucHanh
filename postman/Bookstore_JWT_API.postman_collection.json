{
  "info": {
    "name": "Bookstore JWT API",
    "description": "Collection để test JWT Authentication cho Bookstore",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Login lấy JWT Token (Admin)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.token) {",
              "    pm.collectionVariables.set('token', jsonData.token);",
              "    console.log('Token saved:', jsonData.token);",
              "}",
              "",
              "pm.test('Login thành công', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response có token', function() {",
              "    pm.expect(jsonData).to.have.property('token');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "auth", "login"]
        }
      }
    },
    {
      "name": "2. Login lấy JWT Token (User)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.token) {",
              "    pm.collectionVariables.set('token', jsonData.token);",
              "}",
              "",
              "pm.test('Login thành công', function() {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user\",\n  \"password\": \"user123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "auth", "login"]
        }
      }
    },
    {
      "name": "3. Validate Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/auth/validate",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "auth", "validate"]
        }
      }
    },
    {
      "name": "4. Get Books (với JWT)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/books",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "books"]
        }
      }
    },
    {
      "name": "5. Get Categories (với JWT)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/categories",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "categories"]
        }
      }
    },
    {
      "name": "6. Create Book (với JWT)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sách test JWT\",\n  \"author\": \"Tác giả test\",\n  \"description\": \"Mô tả sách\",\n  \"price\": 99000,\n  \"stock\": 10,\n  \"categoryId\": 1\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/books",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "books"]
        }
      }
    }
  ]
}
